{
    "name": "sample-stack-moleculer-server",
    "version": "0.0.1",
    "private": true,
    "description": "",
    "license": "ISC",
    "author": "CDMBase LLC",
    "main": "index.js",
    "scripts": {
        "prebuild": "npm run build:clean",
        "build": "cross-env NODE_ENV=production npm run build:dist",
        "build:clean": "rimraf dist",
        "build:dist": "rollup -c rollup.config.mjs",
        "build:watch": "npm run build:dist -- --watch",
        "docker:build": "npm run build && docker build . -t $npm_package_name:$npm_package_version",
        "docker:run": "docker run -it --env-file ../../config/staging/docker-staging.env  $npm_package_name:$npm_package_version",
        "jest": "./node_modules/.bin/jest",
        "start": "cross-env NODE_ENV=production tsx  dist/index.js",
        "start:dev": "cross-env ENV_FILE=../../config/development/dev.env node  dist/index.js",
        "start:staging": "cross-env NODE_ENV=staging ENV_FILE=../../config/staging/staging.env tsx  dist/index.js",
        "pretest": "npm run build",
        "test": "jest",
        "test:debug": "npm test -- --runInBand",
        "test:watch": "npm test -- --watch",
        "watch": "npm run start:dev"
    },
    "dependencies": {
        "@casl/ability": "^4.1.5",
        "@cdm-logger/client": "9.0.3",
        "@cdm-logger/server": "^9.0.3",
        "@common-stack/client-core": "6.0.2-alpha.2",
        "@common-stack/core": "6.0.2-alpha.2",
        "@common-stack/server-core": "6.0.6-alpha.0",
        "@common-stack/server-stack": "6.0.6-alpha.0",
        "@common-stack/store-mongo": "6.0.2-alpha.2",
        "@sample-stack/counter-module-server": "link:../../packages-modules/counter/server",
        "app-root-path": "^3.0.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dataloader": "^2.0.0",
        "dotenv": "^7.0.0",
        "envalid": "~7.2.2",
        "esm": "^3.2.25",
        "graphql-tools": "^8.0.0",
        "helmet": "^3.21.2",
        "inversify": "^6.0.2",
        "ioredis": "^4.14.1",
        "lodash": "^4.17.15",
        "moleculer": "^0.14.2",
        "mongoose": "^6.3.3",
        "mongoose-execution-time": "^1.1.0",
        "react": "18.0.0",
        "redux": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.5.3",
        "rxjs-compat": "^6.5.3"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "pm2": "^5.2.2",
        "rimraf": "^3.0.2",
        "tsx": "^4.7.0"
    },
    "overrides": {
        "moleculer": {
            "bunyan": "^2.0.0"
        }
    }
}
